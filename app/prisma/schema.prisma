generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model assets {
  id         String    @id @map("id") @db.VarChar(36)
  name       String    @map("name") @db.VarChar(256)
  currency   String    @map("currency") @db.VarChar(16)
  category   String    @map("category") @db.VarChar(16)
  amount     Int       @map("amount") @db.Int
  createdAt  DateTime  @map("created_at") @db.DateTime(0)
  modifiedAt DateTime  @map("modified_at") @db.DateTime(0)
  deletedAt  DateTime? @map("deleted_at") @db.DateTime(0)
}

model profiles {
  id            Int      @id @default(autoincrement()) @map("id")
  netAssets     Int      @default(0) @map("net_assets") @db.Int
  liabilities   Int      @default(0) @map("liabilities") @db.Int
  emergencyFund Int      @default(0) @map("emergency_fund") @db.Int
  createdAt     DateTime @default(now()) @map("created_at") @db.DateTime(0)
  modifiedAt    DateTime @default(now()) @map("modified_at") @db.DateTime(0)
}
